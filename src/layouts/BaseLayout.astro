---
import '../styles/typography.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Blog Site</title>
    <style is:global>
      :root {
        --font-ui: system-ui, -apple-system, BlinkMacSystemFont,
                   "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        --font-body: Georgia, Cambria, "Times New Roman", Times, serif;
        --font-mono: ui-monospace, SFMono-Regular, Menlo, Monaco,
                     Consolas, "Liberation Mono", monospace;
      }
      
      html { font-size: 18px; }
      
      body {
        margin: 0;
        font-family: var(--font-body);
        line-height: 1.7;
        color: #1a1a1a;
        background-color: #ffffff;
      }
      
      .container { max-width: 700px; padding: 3rem 1.5rem; margin: 0 auto; }
      
      .prose {
        max-width: 100%;
      }
      
      .prose > *:first-child {
        margin-top: 0;
      }
      
      .prose > *:last-child {
        margin-bottom: 0;
      }
      
      h1,h2,h3,h4 {
        font-family: var(--font-ui);
        font-weight: 600;
        line-height: 1.3;
        margin-top: 2.5rem;
        margin-bottom: 1rem;
      }
      
      h1 { font-size: 2.1rem; margin-top:0; }
      h2 { font-size: 1.6rem; }
      h3 { font-size: 1.3rem; }
      
      p { margin: 1.2rem 0; }
      
      a { color: #0055aa; text-decoration: underline; text-underline-offset: 2px; }
      a:hover { text-decoration-thickness: 2px; }
      
      ul, ol { margin: 1.2rem 0; padding-left: 1.5rem; }
      li { margin: 0.5rem 0; }
      
      code {
        font-family: var(--font-mono);
        font-size: 0.95em;
        background: #f5f5f5;
        padding: 0.15em 0.3em;
        border-radius: 3px;
      }
      
      pre {
        font-family: var(--font-mono);
        font-size: 0.9rem;
        line-height: 1.6;
        background: #f5f5f5;
        padding: 1.2rem;
        overflow-x: auto;
        border-radius: 6px;
        margin: 1.5rem 0;
      }
      
      pre code { background: none; padding: 0; }
      
      .search-result { margin-bottom: 2rem; }
      .search-result-title { font-family: var(--font-ui); font-size: 1.2rem; font-weight: 600; margin:0; }
      .search-result-meta { font-family: var(--font-ui); font-size:0.85rem; color:#666; margin:0.3rem 0; }
      .search-result-snippet { margin-top:0.5rem; font-size:1rem; }
      
      nav { font-family: var(--font-ui); font-size:0.95rem; margin-bottom:3rem; }
      nav a { margin-right:1.2rem; text-decoration:none; }
      nav a:hover { text-decoration:underline; }
      
      footer { margin-top:3rem; text-align:center; color:#888; font-size:0.9rem; }
    </style>
  </head>
  <body>
    <Header />

    <main class="container">
      <article class="prose">
        <slot />
      </article>
    </main>

    <Footer />
  </body>
</html>
